

  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
        <td>
          <%= link_to user_path(current_user) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "default_icon.jpg" %><br>
          <%= current_user.name %>
          <% end %>
        </td>
        <td><%= link_to @book.title %></td>
        <td><%= @book.body %></td>
        <td><% if @book.user_id == current_user.id %>
          <%= link_to "Edit", edit_book_path(@book.id), class:"btn-sm btn-success" %>
        </td>
        <td><%= link_to "Destroy", books_path(@book.id),class:"btn-sm btn-danger", method: :delete, data: {confirm: "本当に消しますか?" } %>
        </td><% end %>
      </tr>
    </tbody></table>

  </div>
