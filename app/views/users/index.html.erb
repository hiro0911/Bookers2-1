<%= render 'users/list' %>
<div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <td>

          <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "default_icon.jpg" %>

        </td>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
      <% end %>


  </tbody>
</table>
</div>
</div>
</div>
</div>
