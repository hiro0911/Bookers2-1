<div class="body">
      <div class="container">
      	<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "default_icon.jpg" %>
<table class="table">
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th><br>
        <th><%= current_user.introduction %></th>
      </tr>
</tbody></table>
<div class="row"><%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_17210" %>
</div>
    <h2>New book</h2>
      <%= form_for(@book) do |f| %>
  <div class="field row">
    <%= f.label :title, "Title"%>
    <%= f.text_field :title, :class => 'col-xs-12 book_title' %>
  </div>
  <div class="field row">
    <%= f.label :body, "Opinion"%>
    <%= f.text_area :body, :class => 'col-xs-12 book_body' %>
  </div>
  <div class="actions row">
    <%= f.submit :class => 'btn btn-primary col-xs-12' %>
  </div>
  <% end %>
</div>
