<div class="body">
      <div class="container">

        <p id="notice">Welcome! You have signed up successfully.</p>


        <div class="row">
  
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "default_icon.jpg" %>
<table class="table">
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th><br>
        <th><%= @user.introduction %></th>
      </tr>
</tbody></table>

<div class="row"><%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_17210" %>
</div>

    <h2>New book</h2>
      <%= form_for(@book) do |f| %>
      <% if @book.errors.any? %>
     <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
  <div class="field row">
    <%= f.label :title, "Title"%>
    <%= f.text_field :title, :class => 'col-xs-12 book_title' %>
  </div>
  <div class="field row">
    <%= f.label :body, "Opinion"%>
    <%= f.text_area :body, :class => 'col-xs-12 book_body' %>
  </div>
  <div class="actions row">
    <%= f.submit :class => 'btn btn-primary col-xs-12' %>
  </div>
  <% end %>
</div>





  

  <div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @user.books.each do |book| %>
      <tr>
        <td>
          <%= link_to users_path(book.id) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "default_icon.jpg" %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
      <% end %>


  </tbody>
</table>
  </div>
</div>

      </div>
    </div>
